
      @model IEnumerable<HRGroup.Models.AboutU>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="team" class="team section light-background">
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Team</h2>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <!-- Custom Flex Row for 5 items -->
        <div class="row" style="display: flex; flex-wrap: wrap; justify-content: center;">
            @foreach (var member in Model)
            {
                <div style="flex: 0 0 20%; max-width: 20%; padding: 10px;" data-aos="zoom-in" data-aos-delay="100">
                    <div class="team-card">
                        <div class="team-image">
                            <img src="@Url.Content(member.ImagePath)" class="img-fluid" alt="@member.Name" />
                            <div class="team-overlay">
                                <p>@member.Bio</p>
                                <div class="team-social">
                                    <a target="_blank" href="@member.TwitterUrl"><i class="bi bi-twitter-x"></i></a>
                                    <a target="_blank" href="@member.FacebookUrl"><i class="bi bi-facebook"></i></a>
                                    <a target="_blank" href="@member.InstagramUrl"><i class="bi bi-instagram"></i></a>
                                    <a target="_blank" href="@member.LinkedInUrl"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="team-content">
                            <h4>@member.Name</h4>
                            <span class="position">@member.Position</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<section id="about" class="about section">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                <p class="who-we-are">Who We Are</p>
                <h3>Empowering the Future with a Streamlined Recruitment Process</h3>
                <p class="fst-italic">
                    At ABC Company, we believe in finding the right talent through an efficient and fair recruitment process.
                </p>
                <ul>
                    <li><i class="bi bi-check-circle"></i> <span>We prioritize matching candidates' skills with our company’s values.</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>Our recruitment process is transparent, ensuring a smooth experience for all candidates.</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>We focus on diversity and inclusion, building a workforce that reflects our values.</span></li>
                </ul>
              
            </div>

            <div class="col-lg-6 about-images" data-aos="fade-up" data-aos-delay="200">
                <div class="row gy-4">
                    <div class="col-lg-6">
                        <img src="~/assets/img/about/about-portrait-1.webp" class="img-fluid" alt="Recruitment Team">
                    </div>
                    <div class="col-lg-6">
                        <div class="row gy-4">
                            <div class="col-lg-12">
                                <img src="~/assets/img/about/about-8.jpg" class="img-fluid" alt="Interview Process">
                            </div>
                            <div class="col-lg-12">
                                <img src="~/assets/img/about/about-12.webp" class="img-fluid" alt="Onboarding Process">
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</section><!-- /About Section -->
