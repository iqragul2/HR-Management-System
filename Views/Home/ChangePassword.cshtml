@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top: 100px;">
    <h2 class="text-center mb-4" style="color: rgb(87, 87, 243);">Change Password</h2>

    <form asp-action="ChangePassword" method="post" style="max-width: 500px; margin: auto; padding: 30px; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <!-- Current Password -->
        <div class="form-group mb-3">
            <label for="currentPassword" class="form-label" style="font-weight: bold;">Current Password:</label>
            <input type="text" name="currentPassword" value="@ViewBag.CurrentPassword" readonly class="form-control" style="background-color: #e9ecef; color: #6c757d;" />
        </div>

        <!-- New Password -->
        <div class="form-group mb-3">
            <label for="newPassword" class="form-label" style="font-weight: bold;">New Password:</label>
            <input type="password" name="newPassword" required class="form-control" style="border-radius: 5px;" />
        </div>

        <!-- Confirm Password -->
        <div class="form-group mb-3">
            <label for="confirmPassword" class="form-label" style="font-weight: bold;">Confirm Password:</label>
            <input type="password" name="confirmPassword" required class="form-control" style="border-radius: 5px;" />
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn" style="background-color: rgb(87, 87, 243); color: white; border-radius: 5px; padding: 10px 20px;">
                Change Password
            </button>
        </div>
    </form>
</div>

<!-- Error and Success Messages -->
@if (ViewBag.Error != null)
{
    <p style="color: red; text-align: center; font-weight: bold;">@ViewBag.Error</p>
}
@if (ViewBag.Message != null)
{
    <p style="color: green; text-align: center; font-weight: bold;">@ViewBag.Message</p>
}

