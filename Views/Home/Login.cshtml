
@model User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="color: rgb(87, 87, 243);">@ViewData["Title"]</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center" style="font-weight: bold; background-color: #f8d7da; color: #721c24;">
        @ViewBag.Error
    </div>
}

<div class="container" style="margin-top: 100px; max-width: 500px; padding: 30px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <form asp-action="Login" method="post">
        <!-- Email Field -->
        <div class="form-group mb-3">
            <label for="Email" style="font-weight: bold; color: #333;">Email</label>
            <input type="email" class="form-control" asp-for="Email" required style="border-radius: 5px;" />
        </div>

        <!-- Password Field -->
        <div class="form-group mb-3">
            <label for="Password" style="font-weight: bold; color: #333;">Password</label>
            <input type="password" class="form-control" asp-for="Password" required style="border-radius: 5px;" />
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn" style="background-color: rgb(87, 87, 243); color: white; padding: 10px 20px; border-radius: 5px;">
                Login
            </button>
        </div>
    </form>

    <!-- Register Link -->
    <div class="text-center mt-4">
        <p>Don't have an account? <a href="@Url.Action("Register", "Home")" style="color: rgb(87, 87, 243); font-weight: bold;">Register here</a>.</p>
    </div>

    <div class="text-center mt-4">
        <p>Forget Password? <a href="@Url.Action("ResetPassword", "Home")" style="color: rgb(87, 87, 243); font-weight: bold;">Click here</a>.</p>
    </div>
</div>
