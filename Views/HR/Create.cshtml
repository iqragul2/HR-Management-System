@model HRGroup.Models.Employee
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-40">
    <div class="bg-white rounded-xl shadow-xl p-6 max-w-md w-full">

        <h2 class="text-xl font-semibold mb-5 text-center text-gray-800">Create Profile</h2>

        <form asp-action="Create" enctype="multipart/form-data" method="post" class="space-y-3">

            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
                <input asp-for="FullName" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>

            <div>
                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                <input asp-for="PhoneNumber" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>

            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
                <input asp-for="Address" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>

            <div>
                <label asp-for="Designation" class="block text-sm font-medium text-gray-700">Designation</label>
                <input asp-for="Designation" readonly class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200 bg-gray-100" />
            </div>

            <div>
                <label asp-for="Gender" class="block text-sm font-medium text-gray-700">Gender</label>
                <input asp-for="Gender" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>

            <div>
                <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700">Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200" />
            </div>


            <div>
                <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700">Department</label>
                <input asp-for="DepartmentId" readonly class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring focus:ring-indigo-200 bg-gray-100" />
            </div>


            <div>
                <label class="block text-sm font-medium text-gray-700">Profile Image</label>
                <input type="file" name="ProfileImage" class="mt-1 block w-full" />
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 transition text-sm">
                Create
            </button>
        </form>
    </div>
</div>
