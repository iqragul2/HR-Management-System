@model RecruiterRequest

<div class="flex justify-center items-center min-h-screen bg-gray-100 py-8">
    <form asp-action="SubmitRecruiterRequest" method="post" class="bg-white w-full max-w-md p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Become a Recruiter</h2>

        <input type="hidden" asp-for="UserId" />

        <div class="mb-4">
            <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-200 text-gray-700 cursor-not-allowed" readonly />
            <span asp-validation-for="Name" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ContactInfo" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="ContactInfo" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-200 text-gray-700 cursor-not-allowed" readonly />
            <span asp-validation-for="ContactInfo" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <div class="mb-6">
            <label asp-for="Reason" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <textarea asp-for="Reason" rows="4" placeholder="Please explain your reason to become a recruiter" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"></textarea>
            <span asp-validation-for="Reason" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition">Submit Request</button>
    </form>
</div>
