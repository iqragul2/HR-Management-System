
    @{
    Layout = "~/Views/Shared/_HRLayout.cshtml";


    var query = (string)ViewBag.SearchQuery;
    var vacancies = (List<HRGroup.Models.Vacancy>)ViewBag.Vacancies;
    var applicants = (List<HRGroup.Models.Applicant>)ViewBag.Applicants;
}

<div class="max-w-4xl mx-auto my-12 p-6 bg-white rounded shadow" style="margin-top:100px">
    <h2 class="text-2xl font-semibold mb-4">Search Results for "<span class="text-blue-600">@query</span>"</h2>

    <div class="mb-6">
        <h3 class="text-xl font-semibold mb-2">Vacancies</h3>
        @if (vacancies != null && vacancies.Any())
        {
            <ul class="list-disc list-inside space-y-1">
                @foreach (var vacancy in vacancies)
                {
                    <li>
                        <span class="font-medium">@vacancy.Title</span> - @vacancy.JobDescription
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-gray-600">No vacancies found.</p>
        }
    </div>

    <div>
        <h3 class="text-xl font-semibold mb-2">Applicants</h3>
        @if (applicants != null && applicants.Any())
        {
            <ul class="list-disc list-inside space-y-1">
                @foreach (var applicant in applicants)
                {
                    <li>
                        <span class="font-medium">@applicant.Name</span> - @applicant.AppliedDate.ToString()
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-gray-600">No applicants found.</p>
        }
    </div>
</div>

