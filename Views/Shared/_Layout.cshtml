

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>SmartHire - HR Recruitment</title>
    <meta name="description" content="SmartHire is your smart HR recruitment solution, connecting top talent with opportunity.">
    <meta name="keywords" content="HR, recruitment, jobs, SmartHire">

    <!-- Favicons -->
    <link href="~/assets/img/smarthire-logo.png" rel="icon"> <!-- Updated logo -->
    <link href="~/assets/img/smarthire-logo.png" rel="apple-touch-icon"> <!-- Updated logo -->
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body>
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">

            <a href="index.html" class="logo d-flex align-items-center me-auto me-xl-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.webp" alt=""> -->
                <h1 class="sitename">SmartHire</h1><span>.</span>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-action="Dashboard" asp-controller="Home">Home</a></li>

                    <li><a asp-action="AboutUs" asp-controller="Home">About US</a></li>

                    <li><a asp-action="Index" asp-controller="Help">Contact</a></li>
                    <li><a asp-action="FAQs" asp-controller="Help">FAQs</a></li>
                    <li>
                        @if (Context.Session.GetString("Userrole") == "2") // User
                        {
                            <a class="nav-link text-dark" asp-controller="HR" asp-action="BecomeRecruiter">BecomeRecruiter</a>

                        }
                    </li>
                    <li>
                        @if (Context.Session.GetString("Userrole") == "2") // User
                        {
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="Vacancies">Jobs</a>

                        }
                    </li>

                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
            @{
                var firstname = Context.Session.GetString("Userfirstname");
            }

            @if (!string.IsNullOrEmpty(firstname))
            {
                <div class="dropdown">
                    <button class="btn btn-getstarted dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @firstname
                    </button>
                    <ul class="dropdown-menu">
                        @if (ViewBag.HasProfile == false)
                        {
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Create">Create Profile</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Show">View Profile</a></li>
                        }
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="UserPage">Vacancy Updates</a></li>

                        <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangePassword">Change Password</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                    </ul>

                </div>
            }
            else
            {
                <div class="d-flex gap-2">
                    <a asp-action="Login" asp-controller="Home" class="btn-getstarted">Login</a>
                    <a asp-action="Register" asp-controller="Home" class="btn-getstarted">Register</a>
                </div>
            }



            @*  <a class="btn-getstarted" href="#about">Get Started</a> *@

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer light-background shadow-md mt-4">

        <div class="container text-center py-4">

            <!-- Navigation links -->
            <nav class="footer-nav mb-2">
                <a asp-action="Dashboard" asp-controller="Home" class="text-gray-500 hover:text-primary-500 mx-2">Home</a> |
                <a asp-action="AboutUs" asp-controller="Home" class="text-gray-500 hover:text-primary-500 mx-2">About</a> |
                <a asp-action="Index" asp-controller="Help" class="text-gray-500 hover:text-primary-500 mx-2">Contact</a> |
                <a asp-action="FAQs" asp-controller="Help" class="text-gray-500 hover:text-primary-500 mx-2">FAQs</a>
            </nav>

            <!-- Social links -->
            <div class="social-links d-flex justify-content-center mb-3">
                <a target="_blank" href="https://twitter.com/login" class="text-gray-500 hover:text-primary-500 mx-1"><i class="bi bi-twitter-x"></i></a>
                <a target="_blank" href="https://www.facebook.com/login.php" class="text-gray-500 hover:text-primary-500 mx-1"><i class="bi bi-facebook"></i></a>
                <a target="_blank" href="https://www.instagram.com/accounts/login/" class="text-gray-500 hover:text-primary-500 mx-1"><i class="bi bi-instagram"></i></a>
                <a target="_blank" href="https://www.linkedin.com/login" class="text-gray-500 hover:text-primary-500 mx-1"><i class="bi bi-linkedin"></i></a>
            </div>

            <!-- Address & contact info -->
            <div class="text-gray-500 text-sm mb-3">
                <p>Jameel Jalabi, Road, Block-B Block B North Nazimabad Town</p>
                <p>Karachi, 74700, Pakistan</p>
                <p class="mt-1"><strong>Phone:</strong> <span>02136630103</span></p>
            </div>

            <!-- Copyright -->
            <div class="pt-2 border-t border-gray-200 text-gray-400 text-xs">
                &copy; 2025 <strong class="px-1 sitename text-primary-500">SmartHire</strong>. All Rights Reserved.
            </div>

        </div>

    </footer>



    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>

</body>

</html>

