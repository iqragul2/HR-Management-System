@model HRGroup.Models.RecruiterRequest

@{
    ViewData["Title"] = "Update Request Status";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen flex justify-center items-start pt-24 bg-gray-50">
    <div class="w-full max-w-md bg-white rounded-xl shadow p-6">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Update Request Status</h4>

        <form asp-action="RejectedRequestStatus" method="post" class="space-y-4">
            <input type="hidden" name="requestId" value="@Model.RequestId" />

            <div>
                <label class="block text-sm font-medium text-gray-700">Name:</label>
                <input type="text" readonly value="@Model.Name" class="block w-full bg-gray-100 border border-gray-300 rounded px-3 py-2 text-gray-700" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Contact Info:</label>
                <input type="text" readonly value="@Model.ContactInfo" class="block w-full bg-gray-100 border border-gray-300 rounded px-3 py-2 text-gray-700" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Department:</label>
                <input type="text" readonly value="@Model.DepartmentId" class="block w-full bg-gray-100 border border-gray-300 rounded px-3 py-2 text-gray-700" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Current Status:</label>
                <input type="text" readonly value="@Model.Status" class="block w-full bg-gray-100 border border-gray-300 rounded px-3 py-2 text-gray-700" />
            </div>

            <div>
                <label for="status" class="block text-sm font-medium text-gray-700">New Status</label>
                <select name="status" id="status" required class="block w-full border border-gray-300 rounded px-3 py-2 text-gray-700 bg-white">
                    @foreach (var s in (string[])ViewBag.ValidStatuses)
                    {
                        <option value="@s" selected="@(s == Model.Status ? "selected" : null)">@s</option>
                    }
                </select>
            </div>

            <div class="flex justify-between items-center mt-4">
                <a asp-action="RecruiterRequestsList" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-800">
                    <i class="bi bi-arrow-left mr-1"></i> Back
                </a>
                <button type="submit" class="inline-flex items-center bg-blue-500 hover:bg-blue-600 text-white text-sm font-semibold rounded px-4 py-2 transition">
                    <i class="bi bi-check-circle mr-1"></i> Update Status
                </button>
            </div>
        </form>
    </div>
</div>
