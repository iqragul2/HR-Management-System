@model RecruiterRequest
@{
    ViewData["Title"] = "Process Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen flex justify-center items-center pt-44 px-4 bg-gray-50">
    <form asp-action="ProcessRecruiterRequest" method="post" class="bg-white rounded-xl shadow-lg p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Process Recruiter Request</h2>

        <input type="hidden" asp-for="RequestId" />

        <div class="mb-4">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input asp-for="Name" readonly class="w-full border border-gray-300 rounded-md p-2 bg-gray-100 text-gray-700" />
        </div>

        <div class="mb-6">
            <label asp-for="ContactInfo" class="block text-sm font-medium text-gray-700 mb-1">Contact Info</label>
            <input asp-for="ContactInfo" readonly class="w-full border border-gray-300 rounded-md p-2 bg-gray-100 text-gray-700" />
        </div>

        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded transition duration-300">Approve & Assign</button>
    </form>
</div>
