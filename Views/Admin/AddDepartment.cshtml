@model HRGroup.Models.Department

@{
    ViewData["Title"] = "Add Department";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen flex justify-center items-center py-10 px-4">
    <div class="bg-white rounded-2xl shadow-lg p-6 w-full max-w-md">
        <h2 class="mb-6 text-center text-2xl font-semibold text-gray-800">Add Department</h2>

        <form asp-action="AddDepartment" method="post" enctype="multipart/form-data" class="space-y-4">

            <div>
                <label asp-for="DepartmentId" class="block font-medium text-gray-700 mb-1">Department ID</label>
                <input asp-for="DepartmentId" readonly class="w-full border border-gray-300 rounded-md p-2 bg-gray-100" />
                <span asp-validation-for="DepartmentId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Name" class="block font-medium text-gray-700 mb-1">Department Name</label>
                <input asp-for="Name" class="w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Department Image</label>
                <input type="file" name="imageFile" class="w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" />
            </div>

            <div class="flex justify-between pt-4">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Add Department</button>
                <a asp-action="ListDepartments" class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 transition text-center min-w-[100px]">Cancel</a>
            </div>
        </form>
    </div>
</div>
