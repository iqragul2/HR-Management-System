@model HRGroup.Models.RecruiterRequest

@{
    ViewData["Title"] = "Recruiter Request Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen flex flex-col items-center pt-32 pb-24 px-4 bg-gray-50">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Recruiter Request Details</h2>

    <div class="bg-white rounded-xl shadow p-6 w-full max-w-2xl">
        <div class="mb-4 text-gray-700">
            <span class="font-semibold text-gray-800">Name:</span>
            <span class="ml-2 text-gray-600">@Model.Name</span>
        </div>
        <div class="mb-4 text-gray-700">
            <span class="font-semibold text-gray-800">Contact Info:</span>
            <span class="ml-2 text-gray-600">@Model.ContactInfo</span>
        </div>
        <div class="mb-4 text-gray-700">
            <span class="font-semibold text-gray-800">Department:</span>
            <span class="ml-2 text-gray-600">@Model.DepartmentId</span>
        </div>
        <div class="mb-4 text-gray-700">
            <span class="font-semibold text-gray-800">Status:</span>
            <span class="ml-2 text-gray-600">@Model.Status</span>
        </div>
        <div class="mb-4 text-gray-700">
            <span class="font-semibold text-gray-800">Request Date:</span>
            <span class="ml-2 text-gray-600">
                @(Model.RequestDate.HasValue ? Model.RequestDate.Value.ToShortDateString() : "N/A")
            </span>
        </div>
    </div>
</div>
